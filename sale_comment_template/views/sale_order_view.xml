<odoo>
    <record id="sale_order_form_add_comment" model="ir.ui.view">
        <field name="name">comment_template.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="comments" string="Comments">
                    <p style="margin-top: 10px;">The comments will be displayed on the printed document. You can load a predefined template, write your own text or load a template and then modify it only for this document.</p>
                    <group string="Top Comments">
                        <field context="{'default_position': 'before_lines'}" domain="[('position','=','before_lines')]" name="comment_template1_id" string="Load a template"/>
                        <field colspan="2" name="note1" nolabel="1"/>
                    </group>
                    <group string="Bottom Comments">
                        <field context="{'default_position': 'after_lines'}" domain="[('position','=','after_lines')]" name="comment_template2_id" string="Load a template"/>
                        <field colspan="2" name="note2" nolabel="1"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/form/field[@name='name']" position="after">
                <group>
                    <field colspan="4" name="formatted_note"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
